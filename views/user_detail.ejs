<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1><%= name %></h1>
<div>
    Username  <%= username %>
</div>
<div>
    Profile Image  <img src="<%=profileImageUrl%>" alt="user image" width=20 height=20/>
</div>
<div>
    Email  <%= email %>
</div>
<div>
    Posts  
    <ol style="list-style-type:none;">
        <% posts.forEach(function(post) {%>
            <li>
                <a href="/posts/<%= post.id %>"><img src="<%= post.imageUrl%>" alt="post image" width=50 height=50/></a>
                <a href="/posts/<%= post.id %>" style="text-decoration:none;"><%= post.message %></a>
            </li>
        <% }); %>
    </ol>
</div>

</body>
<%- include('_footer') -%>
</html>
