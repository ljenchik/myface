<html lang="en-gb">
  <body>
    <div>
      <img src="<%=imageUrl%>" alt="post image"/>
    </div>
    <div><%= message %></div>
    <div>
      Posted by
      <a href="/users/<%= postedBy.id %>"
        ><%= postedBy.name %></a>
    </div>
    <div>
      Created at <%= Intl.DateTimeFormat('en-GB', { year: 'numeric', month:
      'long', day: '2-digit'}).format(createdAt) %>
    </div>
    <ul>
      Liked by <%= likedBy.length%> <% likedBy.forEach(function(user) {%>
      <li>
        <a href="/users/<%= user.id %>"
          ><img
            src="<%= user.coverImageUrl%>"
            alt="user image"
        /></a>
        <a href="/users/<%= user.id %>" 
          ><%= user.name %></a
        >
      </li>
      <% }); %>
    </ul>
    <ul>
      Disiked by <%= dislikedBy.length%> <% dislikedBy.forEach(function(user)
      {%>
      <li>
        <a href="/users/<%= user.id %>"
          ><img
            src="<%= user.coverImageUrl%>"
            alt="user image"
        /></a>
        <a href="/users/<%= user.id %>" 
          ><%= user.name %></a
        >
      </li>
      <% }); %>
    </ul>
    <button type="submit">Edit</button>
    <form action="/posts/<%= id%>/delete/" method="POST">
        <button type="submit">Delete</button>
    </form>
  </body>
  <%- include('_footer') -%>
</html>
